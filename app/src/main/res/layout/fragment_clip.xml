<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ClipFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/top_line"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/theme"
            app:layout_constraintBottom_toTopOf="@+id/menu_game"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/menu_game"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/midium_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_line">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/game_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/game_icon" />

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/pubg_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pubg_mobile" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/apex"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/apex" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/amongus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/among" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/genshin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/genshin" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/minecraft"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mine" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/fortnite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/fortnite" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/callofduty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/callofduty" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/lol"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/lol" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/midium_line"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:background="@color/theme"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_game" />

        <TextView
            android:id="@+id/stream_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Popular Clips"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="italic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/midium_line" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/clip_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stream_title" />

        <ProgressBar
            android:id="@+id/progressbar"
            style="?attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stream_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>