<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/theme" />

    <HorizontalScrollView
        android:id="@+id/menu_game"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/game_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/game_icon" />


            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                >

                <ImageView
                    android:id="@+id/pubg_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pubg_mobile"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                >

                <ImageView
                    android:id="@+id/apex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/apex"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                >

                <ImageView
                    android:id="@+id/amongus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/among"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                >

                <ImageView
                    android:id="@+id/genshin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/genshin"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                >

                <ImageView
                    android:id="@+id/minecraft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mine"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                >

                <ImageView
                    android:id="@+id/fortnight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fortnight"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                >

                <ImageView
                    android:id="@+id/callofduty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/callofduty"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                >

                <ImageView
                    android:id="@+id/lol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/lol"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:background="@color/theme" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>