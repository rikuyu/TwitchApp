<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/username"
            />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="25sp"
            app:layout_constraintLeft_toRightOf="@+id/user_profile"
            app:layout_constraintTop_toTopOf="@id/user_profile"
            app:layout_constraintRight_toLeftOf="@+id/link_img"
            app:layout_constraintBottom_toBottomOf="@id/user_profile"
            />

        <ImageView
            android:id="@+id/link_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_game"
            app:layout_constraintTop_toTopOf="@id/user_profile"
            app:layout_constraintLeft_toRightOf="@+id/username"
            app:layout_constraintRight_toLeftOf="@+id/stream_link"
            app:layout_constraintBottom_toBottomOf="@id/user_profile"
            />

        <TextView
            android:id="@+id/stream_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="リンク"
            app:layout_constraintTop_toTopOf="@id/user_profile"
            app:layout_constraintLeft_toRightOf="@+id/link_img"
            app:layout_constraintRight_toLeftOf="@+id/viewer"
            app:layout_constraintBottom_toBottomOf="@id/user_profile"
            />

        <TextView
            android:id="@+id/viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="25sp"
            app:layout_constraintLeft_toRightOf="@+id/stream_link"
            app:layout_constraintTop_toTopOf="@id/user_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/user_profile"
            />

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toBottomOf="@+id/user_profile"
            app:layout_constraintLeft_toRightOf="@id/user_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>